{% extends 'base.html.twig' %}

{% block title %}Les actualités{% endblock %}

{% block body %}
    <div class="container px-4 py-5" id="featured-3">
        <h2 class="pb-2 border-bottom">Les actualités</h2>
        <div class="d-flex justify-content-around row row-col-12">
            {% for actualite in actualites %}
                <div class="card my-2 mx-1 col-lg-5">
                    <div class="row g-0 border border-2">
                        <div class="col-md-12">
                            <div class="card-body">
                                <h5 class="card-title">{{ actualite.titre }}</h5>
                                <p class="card-text">
                                    {{ actualite.contenu |u.truncate(200, '...', false) }}
                                </p>
                                <p class="card-footer d-flex justify-content-between align-items-center">
                                    <a href="{{ path('actualites_details', {'slug': actualite.slug}) }}">
                                        <button class="btn btn-sm btn-info">En savoir plus ...</button>
                                    </a>
                                    <small class="text-muted">Ajoutée
                                        le {{ actualite.createdAt | date('d/m/Y') }} </small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center mt-5">
            {% do actualites.setPageRange(2) %}
            {{ knp_pagination_render(actualites, 'base/_pagination.html.twig') }}
        </div>
    </div>
{% endblock %}
